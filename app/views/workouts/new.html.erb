<h1>New workout</h1>

<% form_for(@workout) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :exercises %><br />
	<ul class="checkbox-list">
	<% Exercise.all.each do |e| -%>
	<li><%= check_box_tag "workout[exercise_ids][]", e.id -%>
	<%= e.name -%></li>
	<% end -%>
	</ul>
  </p>
  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', workouts_path %>