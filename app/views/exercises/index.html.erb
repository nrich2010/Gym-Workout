<h1>Listing exercises</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Equipment</th>
    <th>Note</th>
  </tr>

<% @exercises.each do |exercise| %>
  <tr>
    <td><%=h exercise.name %></td>
    <td><%=h exercise.description %></td>
    <td><%=h exercise.equipment %></td>
    <td><%=h exercise.note %></td>
    <td><%= link_to 'Show', exercise %></td>
    <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
    <td><%= link_to 'Destroy', exercise, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<p>
<%= link_to 'Muscles',muscles_path %>
</p>
