<h1>Listing entries</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Time</th>
    <th>Distance</th>
    <th>Weight</th>
    <th>Rep</th>
    <th>Notes</th>
  </tr>

<% @entries.each do |entry| %>
  <tr>
    <td><%=h entry.date %></td>
    <td><%= link_to entry.exercise[:name], entry.exercise %></td>
    <td><%=h entry.time %></td>
    <td><%=h entry.distance %></td>
    <td><%=h entry.weight %></td>
    <td><%=h entry.rep %></td>
    <td><%=h entry.notes %></td>
    <td><%= link_to 'Show', entry %></td>
    <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
    <td><%= link_to 'Destroy', entry, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New entry', new_entry_path %>