<h1>Editing muscle</h1>

<% form_for(@muscle) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :category %><br />
    <%= select("muscle", "category_id", Category.all.collect {|c| [ c.name, c.id ] }, { :include_blank => true }) %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @muscle %> |
<%= link_to 'Back', muscles_path %>